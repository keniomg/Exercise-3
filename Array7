using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace arrayTask7
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите предложение из слов через пробел:\n");
            string userInput = Console.ReadLine();
            string[] wordsInUserInput = userInput.Split(' ');
            Console.WriteLine();

            foreach (string wordInUserInput in wordsInUserInput)
            {
                Console.WriteLine(wordInUserInput);
            }
        }
    }
}
