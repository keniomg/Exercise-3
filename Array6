using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace arrayTask6
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] numbers = new int[20];
            Random random = new Random();
            int minRandomValue = 0;
            int maxRandomValue = 10;
            bool isSorted = false;
            int[] tempNumbers = new int [numbers.Length];
            int order = 0;
            int indexToSkip = 0;
            int[] tempIndexesToSkip = new int[0];
            int[] indexesToSkip = new int[1];

            for (int i = 0; i < numbers.Length; i++)
            {
                numbers[i] = random.Next(minRandomValue, maxRandomValue);
                Console.Write(numbers[i] + " ");
            }

            for (int i = 0; i < numbers.Length; i++)
            {
                tempNumbers[i] = numbers[i];
            }

            while (isSorted == false)
            {

                for (int i = 0; i < numbers.Length; i++)
                {
                    if (tempNumbers[order] >= numbers[i] && (tempIndexesToSkip.Contains(i)) == false && (tempIndexesToSkip.Length - i == 0) == false)
                    {
                        tempNumbers[order] = numbers[i];
                        indexToSkip = i;
                    }
                }

                order++;

                if (order == 19)
                {
                    Console.WriteLine("19");
                }

                tempIndexesToSkip = new int[order];

                for (int i = 0; i < indexesToSkip.Length; i++)
                {
                    tempIndexesToSkip[i] = indexesToSkip[i];
                }
                
                tempIndexesToSkip[order - 1] = indexToSkip;
                indexesToSkip = tempIndexesToSkip;



                if (order == numbers.Length - 1)
                {
                    isSorted = true;
                }
            }

            Console.WriteLine();

            for (int i = 0; i < tempNumbers.Length; i++)
            {
                Console.Write(tempNumbers[i] + " ");
            }
        }
    }
}

// 4 6 8 3 7 2 6 9 4

// 4 6 8 3 7 2 6 9 4

// 
